{% extends 'base.html.twig' %}

{% block title %}Jobs{% endblock %}

{% block body %}
    <h1>Jobs</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Company</th>
                <th>Url</th>
                <th>Creation_date</th>
                <th>Application_date</th>
                <th>Salary</th>
                <th>Asked_salary</th>
                <th>City</th>
                <th>Status</th>
                <th>Website</th>
                <th>Presence</th>
                <th>Action to take</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for job in jobs %}
            <tr>
                <td>{{ job.id }}</td>
                <td>{{ job.name }}</td>
                <td>{{ job.company }}</td>
                <td>{{ job.url }}</td>
                <td>{{ job.creationDate ? job.creationDate|date('d/m/yy') : '' }}</td>
                <td>{{ job.applicationDate ? job.applicationDate|date('d/m/yy') : '' }}</td>
                <td>{{ job.salary }}</td>
                <td>{{ job.askedSalary }}</td>
                <td>{{ job.city }}</td>
                <td>{{ job.statusText }}</td>
                <td>{{ job.website.name }}</td>
                <td>{{ job.presence.presence }}</td>
                <td>
                {% for action in job.actions %}
                    {{ action.action }}
                {% endfor %}
                </td>
                <td>
                    <a href="{{ path('app_job_edit', {'id': job.id}) }}">edit</a>
                    {{ include('job/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="11">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_job_new') }}">Create new</a>
{% endblock %}
