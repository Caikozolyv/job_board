{% extends 'base.html.twig' %}

{% block title %}Websites{% endblock %}

{% block body %}
    <h1>Websites</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for website in websites %}
            <tr>
                <td>{{ website.id }}</td>
                <td>{{ website.name }}</td>
                <td>
                    <a href="{{ path('app_website_edit', {'id': website.id}) }}">edit</a>
                    {{ include('website/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_website_new') }}">Create new</a>
    <a href="{{ path('app_job_new') }}">back to job creation</a>
{% endblock %}
