{% extends 'base.html.twig' %}

{% block title %}Presence{% endblock %}

{% block body %}
    <h1>Presence</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Presence</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for presence in presences %}
            <tr>
                <td>{{ presence.id }}</td>
                <td>{{ presence.presence }}</td>
                <td>
                    <a href="{{ path('app_presence_edit', {'id': presence.id}) }}">edit</a>
                    {{ include('presence/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_presence_new') }}">Create new</a>
    <a href="{{ path('app_job_new') }}">back to job creation</a>
{% endblock %}
